@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model EvlampochkaWEB.Models.Comment
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<style>
    body {
        margin-top: 20px;
    }

    .content-item {
        padding: 30px 0;
        background-color: #FFFFFF;
    }
</style>

<div class="New" id="comments">
    <div class="row">
        <div class="col-sm-8">
            <form asp-action="AddComment">
                <h3 class="pull-left">@localizer["New"]</h3>
                <input type="submit" value="@localizer["Create"]" class="btn btn-outline-success pull-right" style="margin-top:2px;" />
                <fieldset>
                    <div class="row">
                        <div class="col-sm-3 col-lg-2 hidden-xs">
                            <img class="img-responsive" src="https://res.cloudinary.com/dlrmdokvi/image/upload/v1629842333/pngtree-male-man-person-abstract-flat-color-icon-template-png-image_1622081_hpryzd.jpg" alt="" width="100">
                        </div>
                        <div class="form-group col-xs-12 col-sm-9 col-lg-10">
                            <textarea asp-for="CommentText" class="form-control" id="message" placeholder="Your message" required=""></textarea>
                        </div>
                        <input type="hidden" asp-for="ItemID" value="@ViewBag.ItemId" />
                    </div>
                </fieldset>

            </form>
        </div>
    </div>
</div>

