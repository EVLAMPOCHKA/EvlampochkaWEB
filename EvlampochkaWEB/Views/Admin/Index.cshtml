@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<p>
    <a asp-action="Create" class="btn btn-outline-success">@localizer["Create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @localizer["UserName"]
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Access" asp-route-id="@item.Id">@localizer["Access"]</a>
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id">@localizer["Edit"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
