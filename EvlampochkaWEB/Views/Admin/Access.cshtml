@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Microsoft.AspNetCore.Identity.IdentityUser

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @localizer["Role"]
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Role
        </dd>
    </dl>
    <p>
        @localizer["Info"]
    </p>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">@localizer["Edit"]</a> |
    <a asp-action="Index">@localizer["Back"]</a>
</div>
